{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "vizualizer-document.schema.json",
  "title": "Vizualizer Graph Document",
  "type": "object",
  "additionalProperties": false,
  "required": ["project", "entities", "connections"],
  "properties": {
    "project": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "type"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string" },
        "type": { "type": "string", "minLength": 1 },
        "description": { "type": "string" }
      }
    },
    "entities": {
      "type": "array",
      "items": { "$ref": "#/definitions/entity" }
    },
    "connections": {
      "type": "array",
      "items": { "$ref": "#/definitions/connection" }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "generatedAt": { "type": "string" },
        "scope": { "type": "string" },
        "schema": { "type": "string" },
        "notes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "rules": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "definitions": {
    "entity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "layer", "kind", "title"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "layer": {
          "type": "string",
          "enum": ["php", "wordpress", "react", "external", "infra"]
        },
        "kind": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "path": { "type": "string" },
        "summary": { "type": "string" },
        "details": {
          "type": "object",
          "additionalProperties": true
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "connection": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "from", "to", "type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "minLength": 1 },
        "handoff": { "type": "boolean" },
        "notes": { "type": "string" }
      }
    }
  }
}

